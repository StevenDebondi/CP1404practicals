BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: miles_input
            font_size: 48
            on_text: app.calculate(self.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(miles_input.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(miles_input.text, -1)
#    Button:
#        text: 'Convert miles to km'
#        on_press: app.handle_calculate()
    Label:
        id: output_conversion
        text: app.km_result
        font_size: 48
        color: (1, 1, 1, 1)